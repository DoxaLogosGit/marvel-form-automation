{
  "name": "marvel-form-automation",
  "version": "2.1.0",
  "description": "Automated TypeScript/Playwright tool for submitting Marvel Champions play data to the community statistics Google Form with parallel processing support",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --external playwright",
    "start": "bun src/index.ts",
    "dev": "bun src/index.ts",
    "test": "bun src/index.ts sample_play_data.json 2025-06-01",
    "test:sequential": "bun src/index.ts sample_play_data.json 2025-06-01 --sequential",
    "test:workers": "bun src/index.ts sample_play_data.json 2025-06-01 --workers 4",
    "install:browsers": "bunx playwright install"
  },
  "keywords": ["marvel-champions", "board-game", "automation", "playwright", "form-automation"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "playwright": "^1.57.0"
  }
}
